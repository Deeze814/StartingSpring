<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- <bean id="accountService" class="Services.AccountServiceImpl">
		<property name="accountDao" ref ="accountDao"/>
	</bean>
	<bean id="accountDao" class="Dao.AccountDaoInMemoryImpl"></bean> -->
	
	<!-- Initialize beans with default values  -->
	<bean id="accountService" class="Services.AccountServiceImpl">
		<property name="accountDao" ref="accountDao" />
	</bean>
	
	<bean name="accountDao" class="Dao.AccountDaoInMemoryImpl">
		<property name="accountsMap">
			<map>
				<entry key="1" value-ref="account1" />
				<entry key="2" value-ref="account2" />
			</map>
		</property>
	</bean>
	
	<bean name="account1" class="Beans.Account">
		<property name="id" value="1" />
		<property name="balance" value="50.00" />
		<property name="ownerName" value="Dennis" />
		<property name="locked" value="false" />
	</bean>
	
	<bean name="account2" class="Beans.Account">
		<property name="id" value="2" />
		<property name="balance" value="65.00" />
		<property name="ownerName" value="Victor" />
		<property name="locked" value="false" />
	</bean>	

</beans>
